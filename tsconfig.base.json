{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "noEmitOnError": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    }
}